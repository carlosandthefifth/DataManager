<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_be_blank_if_Notify_if_checked</fullName>
    <active>true</active>
    <errorConditionFormula>IF( Email_Notification__c = true,  ISBLANK( Email_Recipient__c ) , false)</errorConditionFormula>
    <errorDisplayField>Email_Recipient__c</errorDisplayField>
    <errorMessage>Email recipient cannot be blank</errorMessage>
</ValidationRule>
